{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:vue/vue3-essential", "@nuxt/eslint-config"],
  "plugins": ["vue"],
  "rules": {
    "quote-props": ["error", "as-needed"],
    "vue/html-self-closing": [
      "error",
      {
        "html": {
          "void": "always"
        }
      }
    ],
    "vue/singleline-html-element-content-newline": "off",
    "vue/html-self-closing": "off"
  }
}
